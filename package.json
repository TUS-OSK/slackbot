{
  "name": "slackbot",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "ts-node index.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn index.js",
    "debug": "ts-node-dev --inspect --no-notify --respawn --transpileOnly . index.js",
    "lint": "eslint --ext .js,.ts --ignore-pattern '/build/' --fix ."
  },
  "engines": {
    "node": "^10.0.0"
  },
  "repository": "git@github.com:TUS-OSK/slackbot.git",
  "author": "OSK",
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@slack/bolt": "^1.8.0",
    "@types/cookie-session": "^2.0.39",
    "@types/cors": "^2.8.6",
    "@types/helmet": "^0.0.45",
    "@types/morgan": "^1.9.0",
    "@types/pug": "^2.0.4",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "helmet": "^3.22.0",
    "morgan": "^1.10.0",
    "pug": "^2.0.4",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/node": "^13.9.5",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "ts-node-dev": "^1.0.0-pre.44"
  }
}
